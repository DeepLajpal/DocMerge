# Environment Variables

# File size limits (in bytes)
# NEXT_PUBLIC_MAX_FILE_SIZE=104857600       # 100MB per file
# NEXT_PUBLIC_MAX_TOTAL_SIZE=524288000      # 500MB total

# Server-side processing limits (for Vercel free tier)
# Set NEXT_PUBLIC_SERVER_ENABLED=false to disable server mode
NEXT_PUBLIC_SERVER_ENABLED=true
NEXT_PUBLIC_SERVER_MAX_TOTAL_SIZE_MB=4     # Max total size (Vercel free tier: 4.5MB limit)
NEXT_PUBLIC_SERVER_MAX_FILE_SIZE_MB=2      # Max size per file
NEXT_PUBLIC_SERVER_MAX_FILES=10            # Max number of files
NEXT_PUBLIC_SERVER_TIMEOUT_MS=9000         # Timeout (Vercel free tier: 10s limit)

# Canvas limits (for mobile compatibility)
# NEXT_PUBLIC_CANVAS_MAX_DIMENSION=4096    # Max canvas width/height
# NEXT_PUBLIC_CANVAS_MAX_PIXELS=16777216   # Max total pixels (16MP)

# Analytics (automatically set by Vercel)
# NEXT_PUBLIC_VERCEL_ANALYTICS_ID=

# PWA
# NEXT_PUBLIC_APP_URL=https://docmerge.app
